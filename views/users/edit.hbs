<div>
    <h1>Update a User, Bruh</h1>
    <a href="/users">Back Home</a>
    <form action="/users/{{user._id}}?_method=PUT" method="POST" class="col-md-6 col-md-offset-3">
        <input type="text" name="firstName" placeholder="First Name" value="{{user.firstName}}">
        <br>
        <input type="text" name="lastName" placeholder="Last Name" value="{{user.lastName}}">
        <br>
        <input type="text" name="username" placeholder="Username" value="{{user.username}}">
        <br>
        <input type="text" name="email" placeholder="Email" value="{{user.email}}">
        <br>
        <input type="text" name="photoUrl" placeholder="Photo URL" value="{{user.photoUrl}}">
        <br>
        <input type="submit" value="Update Old User">
    </form>
    <button class="cancel"><a href="/users/{{user._id}}">Cancel</a></button>
</div>